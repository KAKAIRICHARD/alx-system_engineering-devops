#!/usr/bin/env bash
# Write a Bash script that configures the container to fit the below requirements
# nginx must be running as nginx user
# nginx must be listening on all active IPs on port 8080
# You cannot use apt-get remove
sudo service nginx stop
sudo pkill apache2


sudo awk '{sub(/#user www-data/,"user nginx")}1' /etc/nginx/nginx.conf > tmp && sudo mv tmp /etc/nginx/nginx.conf
sudo awk '{gsub(/80/,"8080")}1' /etc/nginx/sites-available/default > tmp && sudo mv tmp /etc/nginx/sites-available/default
sudo service nginx start
